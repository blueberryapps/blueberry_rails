source 'https://rubygems.org'

ruby '<%= BlueberryRails::RUBY_VERSION %>'

gem 'airbrake'
<% if !options[:gulp] -%>
gem 'autoprefixer-rails'
<% end -%>
<% if options[:administration] -%>
gem 'blueberry_admin'
<% end -%>
gem 'coffee-rails', '~> 4.2'
<% if options[:devise] -%>
gem 'devise'
<% end -%>
gem 'dotenv-rails'
gem 'flutie'
gem 'jquery-rails'
gem 'metamagic'
gem 'pg'
gem 'puma', '~> 3.0'
gem 'rails', '~> <%= BlueberryRails::RAILS_VERSION %>'
gem 'sassc-rails'
gem 'simple_form'
gem 'slim-rails'
<% if options[:translation_engine] -%>
gem 'translation_engine', github: 'blueberryapps/translation-engine'
<% end -%>
gem 'uglifier', '>= 1.3.0'

source 'https://rails-assets.org' do
<% if options[:bootstrap] -%>
  gem 'rails-assets-bootstrap-sass'
<% end -%>
  gem 'rails-assets-jquery-ujs'
end

group :development do
  gem 'awesome_print'
  gem 'better_errors'
  gem 'binding_of_caller'
<% if options[:fontcustom] -%>
  gem 'fontcustom'
<% end -%>
  gem 'guard-rspec'
  gem 'i18n_yaml_sorter'
  gem 'image_optimizer', '~> 1.3.0'
  gem 'listen', '~> 3.0.5'
  gem 'mailcatcher'
  gem 'pry-rails'
  gem 'rails-i18n-debug', github: 'XeeD/rails-i18n-debug'
  gem 'rubocop', require: false
  gem 'spring'
  gem 'spring-watcher-listen', '~> 2.0.0'
<% if options[:fontcustom] -%>
  gem 'svg_optimizer'
<% end -%>
end

group :development, :test do
  gem 'factory_girl_rails'
  gem 'pry-byebug'
  gem 'pry-doc'
  gem 'rspec-rails', '>= 3.1'
end

group :staging, :production do
  gem 'newrelic_rpm', '>= 3.9.6'
end

group :test do
  gem 'capybara-screenshot'
  gem 'database_cleaner'
  gem 'launchy'
  gem 'poltergeist', '>= 1.5.0'
  gem 'simplecov', require: false
  gem 'webmock'
end

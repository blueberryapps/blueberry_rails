source 'https://rubygems.org'

ruby '<%= BlueberryRails::RUBY_VERSION %>'

gem 'airbrake'
<% unless options[:gulp] -%>
gem 'autoprefixer-rails'
<% end -%>
<% if options[:administration] -%>
gem 'blueberry_admin'
<% end -%>
gem 'bootsnap', require: false
<% if options[:devise] -%>
gem 'devise', '~> 4.5'
<% end -%>
gem 'dotenv-rails'
gem 'draper', '~> 3.0'
gem 'flutie'
gem 'metamagic'
gem 'pg', '>= 0.18', '< 2.0'
gem 'puma', '~> 3.11'
gem 'rails', '~> <%= BlueberryRails::RAILS_VERSION %>'
gem 'sass-rails', '~> 5.0'
gem 'simple_form', '~> 4.1'
gem 'slim-rails', '~> 3.2'
<% if options[:translation_engine] -%>
gem 'translation_engine', github: 'blueberryapps/translation-engine'
<% end -%>
<% unless options[:skip_turbolinks] -%>
gem 'turbolinks', '~> 5'
<% end -%>
gem 'uglifier', '>= 1.3.0'

group :development do
  gem 'awesome_print'
  gem 'guard-rspec'
  gem 'image_optimizer', '~> 1.3.0'
  gem 'listen', '~> 3.0.5'
  gem 'mailcatcher'
  gem 'pry-rails'
  gem 'rails-i18n-debug', github: 'XeeD/rails-i18n-debug'
  gem 'rubocop', require: false
  gem 'spring'
  gem 'spring-watcher-listen', '~> 2.0.0'
  gem 'web-console', '>= 3.3.0'
end

group :development, :test do
  gem 'factory_girl_rails'
  gem 'pry-byebug'
  gem 'pry-doc'
  gem 'rspec-rails', '>= 3.1'
end

group :staging, :integration, :production do
  gem 'newrelic_rpm', '>= 3.9.6'
end

group :test do
  gem 'capybara-screenshot'
  gem 'database_cleaner'
  gem 'launchy'
  gem 'poltergeist', '>= 1.5.0'
  gem 'simplecov', require: false
  gem 'webmock'
end

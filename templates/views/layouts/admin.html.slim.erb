doctype html
html
  head
    = metamagic site: 'Admin - <%= app_name %>',
      title: [:title, :site],
      separator: ' â€“ '
    meta charset='utf-8'
    meta name='viewport' content='width=device-width, initial-scale=1.0'
    = render 'application/favicon'
    = stylesheet_pack_tag 'admin'
    = csrf_meta_tags

  body class=body_class
    .wrapper
      .sidebar
        = render 'admin/partials/nav_left'

      .content-wrapper
        .header
          = render 'admin/partials/nav_top'
        = render 'application/flashes'
        = yield

    = javascript_pack_tag 'admin'
    = yield :javascript
